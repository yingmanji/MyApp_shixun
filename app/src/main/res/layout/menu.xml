    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="tv1"
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="tv2"
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>